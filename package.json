{
  "name": "root",
  "version": "1.0.0",
  "repository": "git@github.com:wunderdogsw/proem.git",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "package"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged --pattern \"./src/**/*.ts\" --pattern \"./test/**/*.ts\""
    }
  },
  "scripts": {
    "lint": "eslint **/*.ts",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "commit": "git-cz",
    "build": "yarn build:compile && yarn build:append-references",
    "build:compile": "tsc -p tsconfig.build.json",
    "build:append-references": "node scripts/append-references.js",
    "clean": "node scripts/clean.js",
    "release": "cd package && npx semantic-release"
  },
  "resolutions": {
    "micromatch": "4.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "8.3.4",
    "@types/benchmark": "1.0.33",
    "@types/jest": "26.0.0",
    "@types/node": "12.12.44",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/eslint-plugin-tslint": "3.1.0",
    "@typescript-eslint/parser": "2.34.0",
    "benchmark": "2.1.4",
    "commitizen": "4.1.2",
    "commitlint": "8.3.5",
    "cz-conventional-changelog": "3.2.0",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.21.1",
    "eslint-plugin-jest": "23.13.2",
    "eslint-plugin-jsdoc": "27.0.4",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "microtime": "3.0.0",
    "prettier": "2.0.5",
    "pretty-quick": "2.0.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.1.0",
    "ts-node": "8.10.2",
    "tslint": "6.1.2",
    "typescript": "3.9.5"
  },
  "dependencies": {
    "ts-toolbelt": "^4.12.0"
  }
}
